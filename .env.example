# ===================
# API 配置
# ===================
# OpenAI API Key (语音转文字)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Unscreen API Key (视频抠像)
UNSCREEN_API_KEY=your-unscreen-api-key-here

# 腾讯云ASR语音识别配置
TENCENT_ASR_SECRET_ID=your-tencent-secret-id
TENCENT_ASR_SECRET_KEY=your-tencent-secret-key
TENCENT_ASR_REGION=ap-beijing

# 腾讯云视频处理配置
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_REGION=ap-beijing
TENCENT_BUCKET_NAME=your-bucket-name

# ===================
# 应用配置
# ===================
# 环境
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志级别
LOG_LEVEL=INFO

# 服务配置
VIDEO_SERVICE=tencent
SPEECH_SERVICE=tencent
SUBTITLE_ENABLED=true
BURN_SUBTITLES_TO_VIDEO=true

# ===================
# 文件存储配置
# ===================
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
TEMP_DIR=./temp

# 文件限制
MAX_VIDEO_SIZE=104857600  # 100MB
MAX_CONCURRENT_JOBS=3

# ===================
# 数据库配置 (可选)
# ===================
# DATABASE_URL=sqlite:///./teacher_videos.db