# Environment example
# Copy to .env and fill in values

# Core
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Services
VIDEO_SERVICE=tencent
SPEECH_SERVICE=xunfei
SUBTITLE_ENABLED=true
BURN_SUBTITLES_TO_VIDEO=true

# Tencent
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=
TENCENT_REGION=ap-beijing
TENCENT_APP_ID=
TENCENT_COS_BUCKET=

# Redis for global locks on Vercel (required for cross-instance ASR serialization)
REDIS_URL=redis://default:yourpassword@your-redis-host:6379/0
# Optional: tune lock TTL (milliseconds)
ASR_LOCK_TTL_MS=900000
